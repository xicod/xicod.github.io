settings.hintAlign = "left";
Hints.style('font-size: 12pt;');
Hints.style('font-size: 12pt;', 'text');

mapkey('yb', '#7Yank text of blockquote', function() {
	Hints.create("blockquote", function(element) {
		Clipboard.write(element.innerText);
	});
});

map('<Ctrl-j>', 'd');
map('<Ctrl-k>', 'u');

mapkey(';w', '#2Focus top window CUSTOM', function() {
	Normal.refreshScrollableElements();
	top.focus();
});
